{
    "manifest_version": 3,
    "name": "Anima",
    "version": "1.0",
    "description": "An Anime based chrome extension for anime lovers.",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "icons": {
        "16": "assets/icon.png",
        "32": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
    },
    "host_permissions": [
        "https://api.open-meteo.com/*",
        "https://geocoding-api.open-meteo.com/*",
        "https://nominatim.openstreetmap.org/*"
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]
}